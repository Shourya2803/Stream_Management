generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id             String        @id @default(cuid())
  userId         String        @unique
  name           String
  email          String?
  phone          String?
  branchChoice1  String
  branchChoice2  String
  seatAllotted   String?
  seatAccepted   Boolean?
  seatStatus     SeatStatus    @default(PENDING)
  receiptUrl     String?
  receiptStatus  ReceiptStatus @default(PENDING)
  offerLetterUrl String?
  createdAt      DateTime      @default(now())
  notification   String?
   marksheetUrl   String?       
marksStatus MarksStatus @default(PENDING)


  // Relations
  class10        Class10Marks?
  class12        Class12Marks?
}



enum SeatStatus {
  PENDING
  ACCEPTED
  REJECTED
}


model Class10Marks {
  id        String  @id @default(cuid())
  studentId String  @unique
  math      Int
  science   Int
  english   Int
  hindi     Int
  social    Int
  student   Student @relation(fields: [studentId], references: [id])
}

model Class12Marks {
  id        String  @id @default(cuid())
  studentId String  @unique
  physics   Int
  chemistry Int
  math      Int
  student   Student @relation(fields: [studentId], references: [id])
}

enum ReceiptStatus {
  PENDING
  VERIFIED
  REJECTED
}
enum MarksStatus {
  PENDING
  VERIFIED
  REJECTED
}